<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
     <h1><%= @list.name %></h1>
    </div>
  </div>
</div>

<div class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
        <%= image_tag bookmark.movie.poster_url, width: 200 %>
        <p><%= bookmark.movie.title %> <%= bookmark.movie.rating %> stars</p>
        <p><%= bookmark.movie.overview %></p>
        <p><%= bookmark.comment %></p>
        <%= link_to list_bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Delete bookmark?"} do %>
        <i class="fa-regular fa-trash-can"></i>
        <% end %>
      </li>
    <% end %>

</div>

<%= link_to "Add a new bookmark", new_list_bookmark_path(@list), class: 'btn btn-primary' %>

<%= link_to "See all lists", lists_path %>
